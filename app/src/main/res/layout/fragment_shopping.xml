<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#fff"
    >


    <Button
        android:id="@+id/shopping_add_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/press_btn"
        android:textStyle="bold"
        android:text="ADD"
        android:textSize="30dp" />

    <AutoCompleteTextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="360dp"
        android:completionThreshold="1"
        android:textStyle="bold"
        android:id="@+id/auto_text"
        android:gravity="center"
        android:hint="SEARCH ITEMS"
        android:layout_below="@id/shopping_add_btn"
        android:layout_height="40dp" />
<!--    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_reminder_back"
        android:layout_width="70dp"
        android:textColor="#ffffff"
        android:layout_height="20dp"
        android:text="Reminder"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/press_btn"
        />-->

    <ListView
        android:id="@+id/shopping_list"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/auto_text"
        android:layout_marginTop="5dp"></ListView>
</RelativeLayout>