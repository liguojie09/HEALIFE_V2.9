<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#82b1ff"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/rename"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:hint="username"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_below="@+id/rename"
        android:inputType="textPassword"
        android:layout_height="30dp"
        android:hint="password"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:lines="1"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_below="@+id/repassword"
        android:layout_height="30dp"
        android:hint="email address"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:lines="1"
        android:singleLine="true"
        />
    <EditText
        android:id="@+id/address"
        android:layout_width="280dp"
        android:gravity="center"
        android:layout_below="@+id/email"
        android:layout_height="30dp"
        android:hint="address"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:lines="1"
        android:singleLine="true"
        />


    <EditText
        android:id="@+id/postcode"
        android:layout_width="60dp"
        android:gravity="center"
        android:inputType="number"
        android:layout_below="@+id/email"
        android:layout_height="30dp"
        android:hint="post"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:lines="1"
        android:singleLine="true"
        android:layout_toRightOf="@+id/address"
        />


    <EditText
        android:id="@+id/firstname"
        android:layout_width="170dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:hint="First Name"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_below="@+id/address"
        />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="170dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:hint="Last Name"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/firstname"
        />
    <RadioGroup
        android:id="@+id/rg_1"
        android:layout_below="@+id/firstname"
        android:layout_width="350dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="M"
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="F"
            android:layout_toRightOf="@+id/rb_1"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/datapicker"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_below="@+id/rg_1"
        android:hint="Date of Birth"
        />

    <TextView
        android:id="@+id/security_hint"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_below="@+id/datapicker"
        android:text="Security Question"
        />

    <Spinner
        android:id="@+id/security_q"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/security_hint"
        android:autofillHints="Select Your Security Question"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:layout_below="@+id/datapicker"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/security_a"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_below="@+id/security_q"
        android:hint="Put Your Security Answer"
        />

    <EditText
        android:id="@+id/emer_contact_email_1"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:hint="your security answers"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@+id/security_q"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        />
    <EditText
        android:id="@+id/emer_contact_email"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:hint="emergency contact email"
        android:textColor="#000000"
        android:layout_below="@+id/emer_contact_email_1"
        android:textSize="16sp"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines = "1"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_below="@+id/emer_contact_email"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:text="Confirm"
        android:background="@drawable/press_btn"
        />

    <Button
        android:id="@+id/cancel"
        android:layout_toRightOf="@+id/confirm"
        android:layout_below="@+id/emer_contact_email"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:text="Cancel"
        android:textColor="#000000"
        android:textSize="18dp"
        android:background="@drawable/press_btn"
        />

</RelativeLayout>